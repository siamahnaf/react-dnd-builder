{
  "name": "@siamahnaf/react-form-renderer",
  "version": "1.2.3",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Siam Ahnaf",
  "license": "ISC",
  "keywords": [
    "react",
    "form-render",
    "tailwind"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "npm run build:js:esm && npm run build:js:cjs",
    "build:js:esm": "cross-env BABEL_ENV=esm babel src --extensions \".ts,.tsx\" --out-dir dist/esm --copy-files",
    "build:js:cjs": "cross-env BABEL_ENV=cjs babel src --extensions \".ts,.tsx\" --out-dir dist/cjs --copy-files",
    "build:css": "npx @tailwindcss/cli -i ./style/tailwind.css -o ./dist/style.css --minify",
    "build": "npm run clean && npm run build:types && npm run build:js && npm run build:css",
    "dev:js": "cross-env BABEL_ENV=esm babel src --extensions \".ts,.tsx\" --out-dir dist/esm --copy-files --watch",
    "dev:css": "npx @tailwindcss/cli -i ./style/tailwind.css -o ./dist/style.css --watch",
    "dev": "concurrently -n JS,TAILWIND -c green,blue \"npm:dev:js\" \"npm:dev:css\""
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.0",
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@tailwindcss/cli": "^4.1.11",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "autoprefixer": "^10.4.21",
    "babel-plugin-transform-imports": "^2.0.0",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rimraf": "^6.0.1",
    "styled-jsx": "^5.1.7",
    "styled-jsx-plugin-postcss": "^4.0.1",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "react": ">=19",
    "react-dom": ">=19"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.13",
    "@siamf/rating": "^1.5.2",
    "@siamf/react-color-pick": "^1.5.0",
    "framer-motion": "^12.20.2",
    "moment": "^2.30.1",
    "react-hook-form": "^7.59.0",
    "signature_pad": "^5.0.10"
  }
}